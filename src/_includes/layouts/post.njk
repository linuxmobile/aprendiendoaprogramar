---
#layout: layouts/base.njk
permalink: "{{ page.fileSlug }}/"
---
{% extends "layouts/base.njk" %}

{% block article %}
  <article class="post-container">
    <div class="container {{ containerWidth if containerWidth else "normal" }} mt-2 page-note">

      {% set lastUpdatedDays = page.date | toDurationDays %}
      {% if lastUpdatedDays > settings.outdatedTime and not noOutdated %}
        <div class="danger not-full-warning">
          <div class="warning-icon">
            {% icon "time" %}
          </div>
          <div>Este post no ha sido actualizado <strong>{{ page.date | toDuration }}</strong>, alguna información puede estar desactualizada! CUIDADO!</div>
        </div>
      {% endif %}

      {% if lowQuality %}
        <div class="danger low-quality-warning">
          <div class="warning-icon">
            {% icon "warning" %}
          </div>
          <div>Esta es una nota de baja-calidad. Utilízala bajo tu propio riesgo!</div>
        </div>
      {% elif notfull %}
        <div class="warning not-full-warning">
          <div class="warning-icon">
            {% icon "draft" %}
          </div>
          <div>Este es un borrador. El contenido puede no estar completo y con una baja resolución de detalles!</div>
        </div>
      {% endif %}

      {% if toc %}
        {{ content | toc | safe }}
        {{ content | safe }}
      {% else %}
        {{ content | safe }}
      {% endif %}
    </div>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Article",
        "headline": "{{ title }}",
        "image": [],
        "author": "{{ settings.author.name }}",
        "url": "{{ settings.url }}{{ canonicalUrl or page.url }}",
        "mainEntityOfPage": "{{ settings.url }}{{ canonicalUrl or page.url }}",
        "datePublished": "{{ page.date | htmlDateString }}",
        "dateModified": "{{ page.date.toISOString().slice(0, 10) }}",
        "description": "{% if description %}{{ description }}{% else %}{{ content | striptags | truncate(140) }}{% endif %}"
      }
    </script>
  </article>
{% endblock %}
